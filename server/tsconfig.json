{
  "compilerOptions": {
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "../../node_modules/@types", "./src/typings/typings.d.ts"],
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "strict": false,
    "target": "es6",
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "./node_modules/apollo-server-types/src/index.ts",
    "./node_modules/ethers-typescript-typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}